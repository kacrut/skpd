@model skpd.DTO.RejectRequest
@{
    ViewBag.Title = "RejectFromEmail";
}

<h2>Penolakan SKPD</h2>
@System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<a href="@Url.Action("Index")">
    <img alt="Kembali" src="@Url.Content("~/Metro/images/misc/left_round.png")" title="Kembali"/>
</a>
@Html.ValidationSummary(true, "Gagal Proses. Silahkan perbaiki error dibawah ini")
@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend></legend>
            <div class="editor-label">
                @Html.LabelFor(m => m.RequestID)
            </div>
            <div class="input-control text">
                @Html.TextBoxFor(m => m.RequestID, new { @readonly = true })
                @Html.ValidationMessageFor(m => m.RequestID)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.RejectedReason,"Alasan ditolak")
            </div>
            <div class="input-control text">
                @Html.TextAreaFor(m => m.RejectedReason)
                @Html.ValidationMessageFor(m => m.RejectedReason)
            </div>
            <p>
                <input type="submit" value="Tolak" />
            </p>
        </fieldset>
    </div>
}
