@model skpd.DTO.LogOnModel

@{
    ViewBag.Title = "Log On";
}

<h2>Log On</h2>
@*<p>
    Please enter your user name and password. @Html.ActionLink("Register", "Register") if you don't have an account.
</p>*@



@*@System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@
@System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
@Html.ValidationSummary(true, "Gagal Login. Silahkan perbaiki error dibawah ini dan kembali login")

@using (Html.BeginForm()) {
    <div class="bg-color-blueLight">
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="input-control text">
                @Html.TextBoxFor(m => m.UserName, new { placeholder = "Enter username" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="input-control password">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Enter password"})
                @*@Html.ValidationMessageFor(m => m.Password)*@
            </div>

            @*<div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>*@
            <div>
                <label class="input-control checkbox" onclick="">
                    <input type="checkbox">
                    <span class="helper">Remember me ?</span>
                </label>
            </div>
            <p>
                <input type="submit" value="Log On" />
            </p>
            <div class="editor-label">
                @Html.ActionLink("Lupa Password?", "ForgotPassword", "Account")
            </div>
        </fieldset>
    </div>
}
