@model skpd.DTO.ForgotPasswordModel

@{
    ViewBag.Title = "Forgot Password";
}

<h2>Lupa Password?</h2>

@System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Gagal Pengiriman Token. Silahkan perbaiki error dibawah ini dan coba kembali")
@using (Html.BeginForm()) {
    <div class="bg-color-blueLight">
        <fieldset>
            <legend></legend>
            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="input-control text">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="input-control text">
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <p>
                <input type="submit" value="Kirim password baru" />
            </p>
        </fieldset>
    </div>
}
