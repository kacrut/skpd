@model skpd.DTO.FirstTimeLogin

@{
    ViewBag.Title = "Konfirmasi";
}

<h2>Form Aktivasi</h2>

@System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
        @Html.ValidationSummary(true, "Password reset was unsuccessful. Please correct the errors and try again.")
    <div>
                <div class="editor-label">
                @Html.LabelFor(m => m.Token)
            </div>
            <div class="input-control text">
                @Html.TextBoxFor(m => m.Token, new { @Value = @Request.QueryString["confirmationCode"] })
                @Html.ValidationMessageFor(m => m.Token)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.NewPassword)
            </div>
            <div class="input-control text">
                @Html.TextBoxFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="input-control text">
                @Html.TextBoxFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>

            <p>
                <input type="submit" value="Aktivasi" />
            </p>
    </div>
}