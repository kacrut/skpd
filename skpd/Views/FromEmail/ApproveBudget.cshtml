@model skpd.Models.DTO.ApproveBudgetFromEmail
@{
    ViewBag.Title = "Approve";
    Layout = "~/Views/Shared/_LayoutEmail.cshtml";
}

<h2>Persetujuan Penggunaan Budget Dari Email</h2>
@System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Gagal Proses. Silahkan perbaiki error dibawah ini")
@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend></legend>
            <div class="editor-label">
                @Html.LabelFor(m => m.RequestID)
            </div>
            <div class="input-control text">
                @Html.TextBoxFor(m => m.RequestID, new { @readonly = true })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="input-control text">
                @Html.TextBoxFor(m => m.UserName, new { @readonly = true })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.BudgetID)
            </div>
            <div class="input-control text">
                @Html.TextBoxFor(m => m.BudgetID, new { @readonly = true })
                @Html.ValidationMessageFor(m => m.BudgetID)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.BudgetName)
            </div>
            <div class="input-control text">
                @Html.TextBoxFor(m => m.BudgetName, new { @readonly = true })
                @Html.ValidationMessageFor(m => m.BudgetName)
            </div>
            <p>
                <input type="submit" value="Setuju" />
            </p>
        </fieldset>
    </div>
}
